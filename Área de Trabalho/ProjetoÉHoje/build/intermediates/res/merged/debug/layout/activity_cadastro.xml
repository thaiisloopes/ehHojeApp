<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="fill_parent" >    android:fillViewport="false">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/images2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:id="@+id/textViewNome"
        android:textSize="20dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNome"
        android:layout_below="@+id/textViewNome"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF:"
        android:id="@+id/textViewCPF"
        android:textSize="20dp"
        android:layout_below="@+id/editTextNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCPF"
        android:layout_below="@+id/textViewCPF"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento:"
        android:id="@+id/textViewDataNascimento"
        android:textSize="20dp"
        android:layout_below="@+id/editTextCPF"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextDataNascimento"
        android:layout_below="@+id/textViewDataNascimento"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextCPF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        android:id="@+id/textViewEstado"
        android:layout_below="@+id/editTextDataNascimento"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEstado"
        android:layout_below="@+id/textViewEstado"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextDataNascimento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade:"
        android:id="@+id/textViewCidade"
        android:layout_below="@+id/editTextEstado"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCidade"
        android:layout_below="@+id/textViewCidade"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextEstado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o:"
        android:id="@+id/textViewEndereco"
        android:textSize="20dp"
        android:layout_below="@+id/editTextCidade"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEndereco"
        android:layout_below="@+id/textViewEndereco"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextCidade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular:"
        android:id="@+id/textViewCelular"
        android:textSize="20dp"
        android:layout_below="@+id/editTextEndereco"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCelular"
        android:layout_below="@+id/textViewCelular"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextCidade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textViewEmail"
        android:textSize="20dp"
        android:layout_below="@+id/editTextCelular"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:layout_below="@+id/textViewEmail"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextCelular" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:id="@+id/textViewSenha"
        android:textSize="20dp"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSenha"
        android:layout_below="@+id/textViewSenha"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextCelular" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/buttonCadastro"
        android:layout_below="@+id/editTextSenha"
        android:layout_gravity="center_horizontal"
        android:background="#060606"
        android:textColor="#fcfbfb"
        android:textSize="20dp" />




</RelativeLayout>
</ScrollView>

